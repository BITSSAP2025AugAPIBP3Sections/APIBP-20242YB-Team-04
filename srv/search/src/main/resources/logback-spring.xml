<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <property name="SERVICE_NAME" value="search" />
  <property name="LOG_DIR" value="${LOG_DIR:-./logs}" />

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="ACCESS" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_DIR}/${SERVICE_NAME}-access.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_DIR}/${SERVICE_NAME}-access.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>14</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>{"ts":"%d{ISO8601}","service":"${SERVICE_NAME}","type":"access","level":"%level","msg":"%msg","remote":"%X{remoteAddr}","method":"%X{method}","path":"%X{path}","query":"%X{query}"}%n</pattern>
    </encoder>
  </appender>

  <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_DIR}/${SERVICE_NAME}-error.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_DIR}/${SERVICE_NAME}-error.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>{"ts":"%d{ISO8601}","service":"${SERVICE_NAME}","level":"%level","logger":"%logger","msg":"%msg","stack":"%ex"}%n</pattern>
    </encoder>
    <filter class="ch.qos.logback.classic.filter.LevelFilter">
      <level>ERROR</level>
      <onMatch>ACCEPT</onMatch>
      <onMismatch>DENY</onMismatch>
    </filter>
  </appender>

  <appender name="DEBUG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_DIR}/${SERVICE_NAME}-debug.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_DIR}/${SERVICE_NAME}-debug.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>{"ts":"%d{ISO8601}","service":"${SERVICE_NAME}","level":"%level","logger":"%logger","msg":"%msg"}%n</pattern>
    </encoder>
  </appender>

  <logger name="access" level="INFO" additivity="false">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="ACCESS"/>
  </logger>

  <logger name="error" level="ERROR" additivity="false">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="ERROR_FILE"/>
  </logger>

  <logger name="debug" level="DEBUG" additivity="false">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="DEBUG_FILE"/>
  </logger>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="DEBUG_FILE"/>
  </root>

</configuration>
