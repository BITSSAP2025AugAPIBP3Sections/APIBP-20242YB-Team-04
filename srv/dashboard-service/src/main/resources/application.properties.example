# Example configuration file - Copy this to application.properties and fill in your values

spring.application.name=Notification

# RabbitMQ Connection Configuration
spring.rabbitmq.host=localhost
spring.rabbitmq.port=5672
spring.rabbitmq.username=guest
spring.rabbitmq.password=guest

# RabbitMQ Listener Configuration
spring.rabbitmq.listener.simple.acknowledge-mode=auto
spring.rabbitmq.listener.simple.prefetch=1

# SendGrid Configuration - REPLACE WITH YOUR ACTUAL VALUES!
# Get your API key from: https://app.sendgrid.com/settings/api_keys
sendgrid.api.key=SG.XXXXXXXXXXXXXXXXXXXXXXXX.XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
sendgrid.from.email=your-verified-sender@yourdomain.com

# Server Port (optional - defaults to 8080)
server.port=8080

# Logging Configuration
logging.level.com.eventix.Notification=INFO
logging.level.org.springframework.amqp=DEBUG
logging.level.org.springframework.rabbit=DEBUG

# Actuator endpoints (for health checks and monitoring)
management.endpoints.web.exposure.include=health,info,metrics
management.endpoint.health.show-details=always

